;-*- coding: utf-8 -*-

(lse-language:define "eiffel"
    '(
        (lse-tpu:ident-chars               "a-zA-Z$0-9")
        (lse-tpu:ident-group-chars         "_")
        (lse-language:initial-fill-in      "««class»»")
        (lse-language:tab-increment        4)
        (lse-comment:head_delim            "--")
        (lse-comment:head_delim_pattern    "--\** *")
        (lse-comment:delim_char_set        "-*")
     )
    '(
        lse-tpu:toggle-newline-and-indent
        lse-tpu:auto-fill-mode:on
     )
    '(
        "lse-templates-eiffel"
     )
    137
     67
;;; eiffel
)

;;; 11-Mar-1997
(defun lse-eiffel-mode ()
  (interactive)
  (lse-language:use "eiffel")
; lse-eiffel-mode
)
