        Seminar-Programm  
        Seminar-Termin    
    )                    
)

(lse-define-fill-in "Seminar-Definition"
  '(token)
  '(description   "Titel & Dauer des Seminars")
  '(replacement 
      "\\DefSeminarTitel/{«text»}"
      "««\\DefSeminarSubtitel/»»"
      "\\DefSeminarVortragender/{«text»}"
      "\\DefSeminarDauer/{«text»}"
   )
)          

(lse-define-fill-in "Seminar-Kapitel" 
  '(replacement 
