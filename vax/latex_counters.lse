delete placeholder counter_name  
define placeholder counter_name -
	/language=latex -
	/descr = "Used by \setcounter, \addtocounter, and \newcounter commands"-
	/topic_string="LATEX Commands Counters" -
	/type=terminal -

"Enter the name you wish to use for the counter."
end define

delete placeholder reset_counter
define placeholder reset_counter -
	/language=latex -
	/descr = "Optional reset for the \newcounter command"-
	/topic_string="LATEX Commands Counters \newcounter" -

"[<counter_name>]"
end define

