!
! Counter commands
!
delete token \setcounter
define token \setcounter -
	/language=latex -
	/descr = "Set an existing counter to a specified value" -
	/topic_string="LATEX Commands Counters \setcounter" -

"\setcounter{<counter_name>}{<number>}"
end define

delete token \addtocounter
define token \addtocounter -
	/language=latex -
	/descr = "Add a specified amount to an existing counter" -
	/topic_string="LATEX Commands Counters \addtocounter" -

"\addtocounter{<counter_name>}{<number>}"
end define

delete token \newcounter
define token \newcounter -
	/language=latex -
	/descr = "Create a new counter" -
	/topic_string="LATEX Commands Counters \newcounter" -

"\newcounter{<counter_name>}<<reset_counter>>"
end define

delete token \usecounter
define token \usecounter -
	/description="Enable counter for use in numbered list" -
	/language=latex -
	/topic_string="LATEX Commands Counters \usecounter" -

"\usecounter{<counter_name>}"
end define

delete token \value
define token \value -
	/description="Produce the value of a counter" -
	/language=latex -
	/topic_string="LATEX Commands Counters \value" -

"\value{<counter_name>}"
end define

delete placeholder alph /language = latex
define placeholder alph /language = latex -
	/topic_string = "LATEX Commands Counters \alph" -
	/language = latex -
	/type = menu -
	/descr = "Alpha counter definitions, capital and lower case" 

	"\alph{<counter_name>}"
	"\Alph{<counter_name>}"
